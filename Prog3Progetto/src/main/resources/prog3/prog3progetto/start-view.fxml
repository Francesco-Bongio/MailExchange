<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>

<VBox alignment="CENTER" spacing="20.0" xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.prog3lab.prog3_mailservice.StartController">
<padding>
    <Insets bottom="20.0" left="20.0" right="20.0" top="20.0"/>
</padding>
<HBox spacing="20.0" alignment="CENTER">
    <Label fx:id="insertEmail" text="Enter your email"/>
    <TextField fx:id="enterEmailText" minWidth="200" />
</HBox>
<Label fx:id="displayError"/>
<Button text="Submit" onAction="#onSubmission"/>
</VBox>
